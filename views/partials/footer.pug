footer.footer(data-visible="false") 
  .footer__wrapper
    .footer__links
      each link in footer.data.footer_left 
        a(href=link.footer_link.url)=link.footer_link_name
    .footer__links--center 
      a(href=("/"))
        h2=footer.data.footer_logo
      p=footer.data.footer_copyright
      p
        | coded by
        | #[a.laan(href="https://twitter.com/Laan_Anla" target="_blank") laanAnla]
    .footer__contact
      each link in footer.data.footer_right 
        a(href=link.footer_link.url)=link.footer_link_name
      .footer__dark--mode 
        h6.label-dark Light
        .toggle-switch
        h6.label-light Dark
    .footer__open
      <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24">
        <path d="M0 16.67l2.829 2.83 9.175-9.339 9.167 9.339 2.829-2.83-11.996-12.17z"/>
      </svg>