extends ../layouts/layout.pug

block variables
  - var template = "painting"


block content
  .painting
    .painting__wrapper
      .painting__title
        h1=painting.data.painting_title
      if painting.data.body[0].slice_type === 'gallery_items'
        .painting__grid
          each media in painting.data.body[0].items
            - var rowValue = media.row
            - var colValue = media.column
            - var reference = media.reference
            - var name = media.name 
            - var dimensions = media.description
            - var scale = media.scale
            if reference == 1
              .painting__grid__item(data-scale=scale data-name=name data-dimensions=dimensions style=`--r: ${rowValue}; --c: ${colValue};`)
                img.painting__grid__item--image.images--modal(src=media.lazy_loading.url data-src=media.image.url alt="")
        
        .painting__grid__large
          each media in painting.data.body[0].items
            - var rowValue = media.row
            - var colValue = media.column
